<!DOCTYPE html>
<html>
<head>
  <title>Recipes</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="header">
    <%= link_to "Recipes", root_path, class: "brand" %>
    <%= render "/layouts/navigation" %>
    <%= render "/layouts/user" %>
  </div>

  <div id="flash">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
  </div>

  <div id="main">
    <%= yield %>
  </div>
</body>
</html>
