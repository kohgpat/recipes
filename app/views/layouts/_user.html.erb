<div id="user">
  <% if signed_in? %>
    <div id="logout">
      <span class="email"><%= current_user.email %></span>
      <%= link_to 'Sign out', sign_out_path, :method => :delete %>
    </div>
  <% else %>
    <div id="login">
      <%= link_to 'Sign in', sign_in_path %>
    </div>
  <% end %>
</div>
